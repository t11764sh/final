<ul class="list-unstyled">
  <% @books.each do |book| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(book.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to book.user.name, user_path(book.user) %> <span class="text-muted">posted at <%= book.created_at %></span>
        </div>
        <div>
          <p><%= book.title %></p>
          <p><%= book.status %></p>
          <p><%= book.buy_date %></p>
        </div>
        <div>
          <% if current_user == book.user %>
            <%= link_to "削除", book, method: :destroy, data: { confirm: "消しても本当にいいですか?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate books %>
</ul>