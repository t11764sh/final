<%= form_with(model: book, local: true) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% book.errors.full_messages.each do |bok| %>
          <li><%= bok %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  
  <%= f.label :buy_date, '購入日' %>
  <%= f.text_field :buy_date %>

  <%= f.submit '追加' %>
<% end %>